# SweatBot Docker Configuration Template
# Copy this to .env.docker and customize as needed
# The docker_ports.py script will auto-generate this with available ports

# Service Ports (Host:Container mapping)
# These ports will be exposed on your host machine
BACKEND_PORT=8000
FRONTEND_PORT=3000
POSTGRES_PORT=5432
REDIS_PORT=6379

# Internal URLs (for container-to-container communication)
# These should NOT be changed unless you modify the docker network
DATABASE_URL=postgresql://fitness_user:secure_password@postgres:5432/hebrew_fitness
REDIS_URL=redis://:sweatbot_redis_pass@redis:6379/0

# External URLs (for browser access)
# These are used by the frontend to connect to the backend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Application Settings
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=true
LOG_LEVEL=INFO

# AI Models
WHISPER_MODEL=ivrit-ai/whisper-large-v3
MODEL_PATH=/app/models

# Optional AI API Keys (add your own)
# GEMINI_API_KEY=your-gemini-api-key
# GROQ_API_KEY=your-groq-api-key
# OPENAI_API_KEY=your-openai-api-key

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Performance Settings
MAX_WORKERS=4
MODEL_CACHE_SIZE=5
QUERY_CACHE_TTL=300

# WebSocket Configuration
WS_MESSAGE_QUEUE_SIZE=100
WS_HEARTBEAT_INTERVAL=30

# Monitoring & Metrics
ENABLE_METRICS=true
METRICS_PORT=9090