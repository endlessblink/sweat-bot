# SweatBot Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://sweatbot_user:sweatbot_pass@localhost:5432/sweatbot

# Redis Configuration
REDIS_URL=redis://:sweatbot_redis_pass@localhost:6379/0

# Authentication & Security
SECRET_KEY=your-super-secret-key-change-in-production-min-256-bits
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# API Configuration
DEBUG=True
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# AI & Voice Processing
WHISPER_MODEL_SIZE=base  # tiny, base, small, medium, large
OPENAI_API_KEY=your-openai-api-key-if-using-openai-api

# External Services (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
PROMETHEUS_METRICS_ENABLED=true

# File Storage (Optional)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=sweatbot_minio_access
MINIO_SECRET_KEY=sweatbot_minio_secret
MINIO_SECURE=false

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@sweatbot.com

# Hebrew NLP Configuration
HEBREW_STEMMER_ENABLED=true
HEBREW_VOCAB_SIZE=50000

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
RATE_LIMIT_PER_MINUTE=60
VOICE_CHUNK_SIZE=1024
MAX_AUDIO_DURATION=30  # seconds

# Development Settings
RELOAD_ON_CHANGE=true
PRETTY_LOGGING=true

# Production Settings (Set in production)
# ENVIRONMENT=production
# SECURE_COOKIES=true
# HTTPS_ONLY=true