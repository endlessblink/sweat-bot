# SweatBot Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# CRITICAL: PORT CONFIGURATION (DO NOT CHANGE)
# ============================================
# SweatBot uses ports 8000-8020 exclusively
BACKEND_PORT=8000
FRONTEND_PORT=8005
POSTGRES_PORT=8001
MONGODB_PORT=8002
REDIS_PORT=8003

# Database Configuration
DATABASE_URL=postgresql+asyncpg://fitness_user:secure_password@localhost:8001/hebrew_fitness
MONGODB_URL=mongodb://sweatbot:secure_password@localhost:8002/
MONGODB_DATABASE=sweatbot_conversations

# Redis Configuration
REDIS_URL=redis://:sweatbot_redis_pass@localhost:8003/0

# Authentication & Security
SECRET_KEY=your-super-secret-key-change-in-production-min-256-bits
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# API Configuration
DEBUG=True
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:8000,http://localhost:8005

# AI API Keys (REQUIRED)
VITE_GEMINI_API_KEY=your-gemini-api-key-here
VITE_GROQ_API_KEY=your-groq-api-key-here
VITE_BACKEND_URL=http://localhost:8000

# AI & Voice Processing (Future local models)
# WHISPER_MODEL_SIZE=large  # For Hebrew: use large or large-v3
# WHISPER_MODEL=ivrit-ai/whisper-large-v3  # Currently unused

# External Services (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
PROMETHEUS_METRICS_ENABLED=true

# File Storage (Optional)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=sweatbot_minio_access
MINIO_SECRET_KEY=sweatbot_minio_secret
MINIO_SECURE=false

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@sweatbot.com

# Hebrew NLP Configuration
HEBREW_STEMMER_ENABLED=true
HEBREW_VOCAB_SIZE=50000

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
RATE_LIMIT_PER_MINUTE=60
VOICE_CHUNK_SIZE=1024
MAX_AUDIO_DURATION=30  # seconds

# Development Settings
RELOAD_ON_CHANGE=true
PRETTY_LOGGING=true

# Production Settings (Set in production)
# ENVIRONMENT=production
# SECURE_COOKIES=true
# HTTPS_ONLY=true