# ========================================
# SweatBot TypeScript Backend Configuration
# ========================================

# Server Configuration
NODE_ENV=development
PORT=8000
HOST=0.0.0.0

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://fitness_user:secure_password@localhost:8001/hebrew_fitness
DB_HOST=localhost
DB_PORT=8001
DB_USERNAME=fitness_user
DB_PASSWORD=secure_password
DB_DATABASE=hebrew_fitness

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration (port range 8000-8020)
CORS_ORIGIN=http://localhost:8000,http://localhost:8001,http://localhost:8002,http://localhost:8003,http://localhost:8004,http://localhost:8005,http://localhost:8006,http://localhost:8007

# ========================================
# AI Provider Configuration
# ========================================

# Ollama (Local AI Models) - Priority 1
OLLAMA_ENABLED=true
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama2
OLLAMA_PRIORITY=1

# Google Gemini API - Priority 2
GEMINI_ENABLED=false
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_DEFAULT_MODEL=gemini-pro
GEMINI_PRIORITY=2

# Groq API - Priority 3
GROQ_ENABLED=false
GROQ_API_KEY=your-groq-api-key-here
GROQ_DEFAULT_MODEL=llama3-8b-8192
GROQ_PRIORITY=3

# OpenAI API - Priority 4
OPENAI_ENABLED=false
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_DEFAULT_MODEL=gpt-3.5-turbo
OPENAI_PRIORITY=4

# ========================================
# Optional: MongoDB Configuration
# (For conversation history)
# ========================================
MONGODB_ENABLED=false
MONGODB_URL=mongodb://sweatbot:secure_password@localhost:8002/
MONGODB_DATABASE=sweatbot_conversations

# ========================================
# Optional: Redis Configuration
# (For caching and sessions)
# ========================================
REDIS_ENABLED=false
REDIS_URL=redis://:sweatbot_redis_pass@localhost:8003/0

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ========================================
# Feature Flags
# ========================================
ENABLE_VOICE_RECOGNITION=false
ENABLE_REAL_TIME_UPDATES=true
ENABLE_GAMIFICATION=true
ENABLE_HEBREW_PARSING=true