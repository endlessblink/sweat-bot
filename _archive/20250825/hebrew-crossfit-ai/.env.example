# Hebrew CrossFit AI - Environment Configuration
# Copy this file to .env and fill with your actual API keys

# ==================================================
# AI Services Configuration
# ==================================================

# Google Gemini API (Primary AI service - REQUIRED)
GEMINI_API_KEY=your_gemini_api_key_here

# Groq API (Alternative fast inference)
GROQ_API_KEY=your_groq_api_key_here

# OpenAI API (Alternative AI service)
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs API (Premium TTS service)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ==================================================
# Database Configuration
# ==================================================

# SQLite database file path
DB_PATH=workout_data.db

# Enable automatic database backups
DB_BACKUP_ENABLED=true

# Backup interval in hours
DB_BACKUP_INTERVAL=24

# ==================================================
# Voice & Speech Configuration
# ==================================================

# Primary language for voice recognition
VOICE_LANGUAGE=he-IL

# Speech recognition model (whisper, google, azure)
VOICE_MODEL=whisper

# Text-to-speech voice name
TTS_VOICE=avri

# Voice recognition timeout (seconds)
VOICE_TIMEOUT=5

# Phrase detection timeout (seconds)
PHRASE_TIMEOUT=1

# ==================================================
# User Interface Configuration
# ==================================================

# UI theme (light, dark)
UI_THEME=light

# UI language (he, en)
UI_LANGUAGE=he

# Enable right-to-left text support
RTL_SUPPORT=true

# Mobile-optimized interface
MOBILE_OPTIMIZED=true

# ==================================================
# Security & Privacy
# ==================================================

# Secret key for encryption (generate a secure random key)
SECRET_KEY=your_secure_secret_key_here

# JWT algorithm for session tokens
JWT_ALGORITHM=HS256

# Session timeout in seconds
SESSION_TIMEOUT=3600

# Enable data encryption
ENCRYPT_DATA=true

# Anonymous analytics only
ANONYMOUS_ANALYTICS=true

# ==================================================
# Feature Flags
# ==================================================

# Enable social features (challenges, leaderboards)
ENABLE_SOCIAL_FEATURES=false

# Enable cloud synchronization
ENABLE_CLOUD_SYNC=false

# Enable usage analytics
ENABLE_ANALYTICS=true

# Enable offline mode
ENABLE_OFFLINE_MODE=true

# Enable voice shortcuts
ENABLE_VOICE_SHORTCUTS=true

# ==================================================
# Development Configuration
# ==================================================

# Enable debug mode
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable development tools
DEV_TOOLS=false

# ==================================================
# Performance Configuration
# ==================================================

# Maximum memory usage (MB)
MAX_MEMORY_MB=512

# Audio buffer size
AUDIO_BUFFER_SIZE=1024

# Voice recognition batch size
RECOGNITION_BATCH_SIZE=16

# Database connection pool size
DB_POOL_SIZE=5

# ==================================================
# Deployment Configuration
# ==================================================

# Production deployment
PRODUCTION=false

# Server host
HOST=0.0.0.0

# Server port
PORT=8000

# Number of worker processes
WORKERS=1

# Enable HTTPS
ENABLE_HTTPS=false

# SSL certificate path
SSL_CERT_PATH=

# SSL key path
SSL_KEY_PATH=