{
  "version": 2,
  "name": "sweatbot-frontend",
  "framework": "vite",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, PATCH, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://sweatbot-api.onrender.com/api/:path*"
    },
    {
      "source": "/ws",
      "destination": "wss://sweatbot-api.onrender.com/ws"
    },
    {
      "source": "/health/:path*",
      "destination": "https://sweatbot-api.onrender.com/health/:path*"
    },
    {
      "source": "/auth/:path*",
      "destination": "https://sweatbot-api.onrender.com/auth/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}