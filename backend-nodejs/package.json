{
  "name": "sweatbot-api",
  "version": "2.0.0",
  "description": "SweatBot Hebrew Fitness AI Tracker - Node.js/TypeScript API",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "dev:simple": "nodemon src/server-simple.ts",
    "build": "tsc --outDir dist --target ES2020 --module commonjs --esModuleInterop --skipLibCheck",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "test:migration": "node test-migration.js"
  },
  "keywords": [
    "fitness",
    "ai",
    "hebrew",
    "workout",
    "tracking",
    "typescript",
    "nodejs",
    "express"
  ],
  "author": "SweatBot Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.9.1",
    "@google-ai/generativelanguage": "^2.9.1",
    "anthropic": "^0.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "google-auth-library": "^9.15.1",
    "groq-sdk": "^0.3.3",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.104.0",
    "pg": "^8.16.3",
    "redis": "^4.7.1",
    "socket.io": "^4.8.1",
    "winston": "^3.18.3",
    "ws": "^8.18.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.22",
    "@types/pg": "^8.15.5",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
