{
  "name": "sweatbot",
  "version": "1.0.0",
  "description": "Hebrew Fitness AI Tracker with Squad Engineering",
  "main": "index.js",
  "scripts": {
    "squad:analyze": "node squad-init.js analyze",
    "squad:feature": "node squad-init.js feature",
    "squad:sync": "node squad-init.js sync",
    "squad:status": "node squad-init.js status",
    "squad:init": "node squad-init.js init",
    "bmad:analyst": "node .bmad-core/agent-runner.js analyst",
    "bmad:pm": "node .bmad-core/agent-runner.js pm",
    "bmad:architect": "node .bmad-core/agent-runner.js architect",
    "bmad:scrum": "node .bmad-core/agent-runner.js scrum",
    "bmad:developer": "node .bmad-core/agent-runner.js developer",
    "bmad:qa": "node .bmad-core/agent-runner.js qa",
    "bmad:help": "node .bmad-core/agent-runner.js",
    "bmad-squad:init": "node .bmad-core/integration/squad-bmad-orchestrator.js init",
    "bmad-squad:sprint": "node .bmad-core/integration/squad-bmad-orchestrator.js sprint",
    "bmad-squad:feature": "node .bmad-core/integration/squad-bmad-orchestrator.js feature",
    "bmad-squad:sync": "node .bmad-core/integration/squad-bmad-orchestrator.js sync",
    "bmad-squad:dashboard": "node .bmad-core/integration/squad-bmad-orchestrator.js dashboard",
    "bmad-squad:hebrew": "node .bmad-core/integration/squad-bmad-orchestrator.js hebrew-optimize",
    "bmad-squad:team": "node .bmad-core/integration/squad-bmad-orchestrator.js team",
    "bmad-squad:mapping": "node .bmad-core/integration/squad-bmad-mapping.js summary",
    "dev": "bun --bun next dev --port 4000",
    "dev:backend": "cd hebrew-fitness-hybrid/backend && python main.py",
    "dev:frontend": "bun run dev",
    "dev:old-frontend": "cd hebrew-fitness-hybrid/frontend && npm run dev",
    "build": "bun --bun next build",
    "start": "bun --bun next start",
    "lint": "next lint",
    "test": "jest",
    "build:old-frontend": "cd hebrew-fitness-hybrid/frontend && npm run build"
  },
  "keywords": [
    "fitness",
    "hebrew",
    "ai",
    "voice-recognition",
    "crossfit",
    "squad-engineering"
  ],
  "author": "SweatBot Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.19.11",
    "@types/react": "19.1.10",
    "jest": "^29.0.0",
    "typescript": "^5.9.2"
  },
  "squad": {
    "roles": [
      "backend",
      "frontend",
      "ai",
      "qa"
    ],
    "project": "sweatbot",
    "methodology": "squad-engineering"
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.7",
    "@ai-sdk/react": "^2.0.16",
    "@assistant-ui/react": "^0.10.42",
    "@assistant-ui/react-ai-sdk": "^1.0.2",
    "@mastra/core": "^0.13.2",
    "@tailwindcss/postcss": "^4.1.12",
    "ai": "^5.0.16",
    "autoprefixer": "^10.4.21",
    "js-yaml": "^4.1.0",
    "mastra": "^0.10.21",
    "next": "^15.4.7",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.20.4",
    "zod": "^3.25.76"
  }
