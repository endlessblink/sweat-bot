{
  "authentication": {
    "enabled": false,
    "requireAuth": false,
    "allowRegistration": false,
    "sessionTimeout": "24h",
    "refreshTokenTimeout": "7d"
  },
  "server": {
    "port": 8776,
    "host": "localhost",
    "corsOrigins": [
      "http://localhost:8777",
      "http://localhost:5173"
    ]
  },
  "features": {
    "autoBackup": true,
    "backupInterval": 3600000,
    "maxBackups": 10,
    "enableWebSocket": true,
    "enableOllama": true,
    "enableSemanticSearch": true,
    "blockXenovaOnWindows": false,
    "semanticSearchProvider": "xenova"
  },
  "logging": {
    "level": "info",
    "enableFileLogging": false,
    "logDirectory": "./logs"
  }
}