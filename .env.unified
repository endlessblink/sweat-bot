# SweatBot Unified Environment Configuration
# Single source of truth for all services
# Created: 2025-08-21

# ============================================
# PORT ALLOCATION (8000-8006 reserved for SweatBot)
# ============================================
BACKEND_PORT=8000          # FastAPI backend
POSTGRES_PORT=8001         # PostgreSQL database  
MONGODB_PORT=8002          # MongoDB for conversations
REDIS_PORT=8003            # Redis cache
FRONTEND_PORT=8004         # Vite React frontend (moved from 8002)
AGENT_PORT=8005            # PersonalSweatBot AI agent service
HEALTH_DASHBOARD_PORT=8006 # Health monitoring dashboard

# ============================================
# DATABASE CONNECTIONS
# ============================================
# PostgreSQL
DATABASE_URL=postgresql+asyncpg://fitness_user:secure_password@localhost:8001/hebrew_fitness
DATABASE_URL_SYNC=postgresql://fitness_user:secure_password@localhost:8001/hebrew_fitness

# MongoDB
MONGODB_URL=mongodb://sweatbot:secure_password@localhost:8002/
MONGODB_DATABASE=sweatbot_conversations
MONGODB_COLLECTION=conversations

# Redis
REDIS_URL=redis://:sweatbot_redis_pass@localhost:8003/0
REDIS_PASSWORD=sweatbot_redis_pass

# ============================================
# AI MODEL CONFIGURATION
# ============================================
# Gemini (Google)
GEMINI_API_KEY=${GEMINI_API_KEY:-}
GOOGLE_GENERATIVE_AI_API_KEY=${GEMINI_API_KEY:-}

# Groq
GROQ_API_KEY=${GROQ_API_KEY:-}

# Ollama (Local)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=bjoernb/gemma3n-e2b:latest

# Model Selection Priority
AI_MODEL_PRIORITY=gemini,groq,ollama
AI_MODEL_TIMEOUT=15

# ============================================
# WHISPER CONFIGURATION
# ============================================
WHISPER_MODEL_SIZE=base
WHISPER_MODEL_PATH=./models/whisper
WHISPER_LANGUAGE=he

# ============================================
# APPLICATION SETTINGS
# ============================================
# Security
SECRET_KEY="your-256-bit-secret-key-change-in-production"
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://localhost:8001,http://localhost:8002,http://localhost:8003,http://localhost:8004,http://localhost:8005

# Logging
LOG_LEVEL=INFO
DEBUG=true

# ============================================
# FRONTEND CONFIGURATION
# ============================================
VITE_API_BASE_URL=http://localhost:8000
VITE_AGENT_BASE_URL=http://localhost:8005
VITE_WS_URL=ws://localhost:8000/ws
VITE_APP_TITLE="SweatBot - Hebrew Fitness AI"

# ============================================
# AGENT SERVICE CONFIGURATION
# ============================================
AGENT_SERVICE_HOST=0.0.0.0
AGENT_SERVICE_PORT=8005
AGENT_MAX_RETRIES=3
AGENT_RETRY_DELAY=5
AGENT_MONGODB_TIMEOUT=10

# ============================================
# HEALTH MONITORING
# ============================================
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5
HEALTH_DASHBOARD_ENABLED=true

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Hot Reload Settings
BACKEND_RELOAD=true
FRONTEND_HMR=true

# Process Management
PM2_ENABLED=true
SUPERVISOR_ENABLED=false

# ============================================
# DOCKER SETTINGS (when using docker-compose)
# ============================================
# Internal Docker network URLs
DOCKER_DATABASE_URL=postgresql+asyncpg://fitness_user:secure_password@postgres:5432/hebrew_fitness
DOCKER_MONGODB_URL=mongodb://sweatbot:secure_password@mongodb:27017/
DOCKER_REDIS_URL=redis://:sweatbot_redis_pass@redis:6379/0

# ============================================
# SYSTEM PATHS
# ============================================
PROJECT_ROOT='/mnt/d/MY PROJECTS/AI/LLM/AI Code Gen/my-builds/Automation-Bots/sweatbot'
BACKEND_PATH='/mnt/d/MY PROJECTS/AI/LLM/AI Code Gen/my-builds/Automation-Bots/sweatbot/backend'
FRONTEND_PATH='/mnt/d/MY PROJECTS/AI/LLM/AI Code Gen/my-builds/Automation-Bots/sweatbot/personal-ui-vite'
AGENT_PATH='/mnt/d/MY PROJECTS/AI/LLM/AI Code Gen/my-builds/Automation-Bots/sweatbot'
DATA_PATH='/mnt/d/MY PROJECTS/AI/LLM/AI Code Gen/my-builds/Automation-Bots/sweatbot/data'
LOGS_PATH='/mnt/d/MY PROJECTS/AI/LLM/AI Code Gen/my-builds/Automation-Bots/sweatbot/logs'